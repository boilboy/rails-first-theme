<main>
 <div class ="PageTitle">
  <h3>予定一覧</h3>
  <p><%= link_to "新規追加", :new_plan %></p>
 </div>

 <% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
 <% end %>

 <table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>開始日</th>
      <th>終了日</th>
      <th>終日</th>
      <th>更新日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.id %></td>
        <td><%= plan.title %></td>
        <td><%= plan.start_at.to_s(:date_jp) %></td>  
        <td><%= plan.end_at.to_s(:date_jp) %></td>
        <td>
         <% if plan.is_all_day == true %>   
           ◯
         <% else plan.is_all_day == false %>
          <% end %>
        </td>
        <td><%= plan.updated_at.to_s(:datetime_jp) %></td>
        <td>
         <%= link_to "参照", plan %>
        </td>
        <td>
         <%= link_to "編集", [:edit, plan] %>
        </td>
        <td>
         <%= link_to "削除", plan, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>                                      
      </tr>
    <% end %>
  </tbody>
 </table>
</main>

<footer>
  <h2>予定合計 <%= Plan.count(:id) %> 件 本日の日付 <%= Date.today.to_s(:date_jp) %></h2>
<footer>  
