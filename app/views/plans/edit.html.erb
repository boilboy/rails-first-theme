<h3>予定編集</h3>

<%= render "shared/error", obj: @plan %>

<%= form_with model: @plan do |f| %>
  <table>
    <tr>
      <th><%= f.label :title ,"名前" %></th>
      <td><%= f.text_field :title, size: 28,placeholder:"タイトル"  %></td>
    </tr>
    <tr>
      <th><%= f.label :start_at ,"開始日" %></th>
      <td><%= f.date_field :start_at %></td>
    </tr>
    <tr>
      <th><%= f.label :end_at ,"終了日" %></th>
      <td><%= f.date_field :end_at %></td>
    </tr>
    <tr>
      <th><%= f.label :is_all_day ,"終日" %></th>
      <td><%= f.check_box :is_all_day %><p>終日の場合はチェックを入れます</p></td>
    </tr>
    <tr>
      <th><%= f.label :schedule_memo ,"スケジュールメモ" %></th>
      <td><%= f.text_area :schedule_memo, size: "25x8",placeholder:"メモを入力する" %></td>
    </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "予定一覧に戻る", :plans %></li>
    </ul>
  </div>
<% end %>

