<h3>予定詳細</h3>  

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @plan.title %></td>                
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @plan.start_at.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>終了日</th>
    <td><%= @plan.end_at.to_s(:date_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td>
     <% if @plan.is_all_day == true %>
     ◯
     <% else @plan.is_all_day == false %>
    <% end %>
    </td>
  </tr>
  <tr>
     <th>スケジュールメモ</th>
     <td><%= @plan.schedule_memo %></td>
  </tr>
</table>

<div>
  <ul>
    <li><%= link_to "予定一覧に戻る", :plans %></li>
    <li><%= link_to "予定を編集する", :edit_plan %></li>
  </ul>
</div>
